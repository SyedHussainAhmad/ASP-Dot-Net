@{
    ViewData["Title"] = "Generate Report";
}

<div class="container mt-5">
    <h1 class="text-gradient text-center mb-5">Generate Expense Report</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-hover shadow-lg p-4">
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="reportType" class="text-light">Select Report Type</label>
                        <select class="form-control" id="reportType" name="reportType">
                            <option value="monthly">Monthly</option>
                            <option value="yearly">Yearly</option>
                            <!-- Add more report types if needed -->
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label for="dateRange" class="text-light">Select Date Range</label>
                        <input type="text" class="form-control" id="dateRange" name="dateRange" placeholder="Enter date range (e.g., Jan 2024 - Dec 2024)">
                    </div>

                    <button type="submit" class="btn btn-gradient btn-block">Generate Report</button>
                </form>
            </div>
        </div>
    </div>
</div>
