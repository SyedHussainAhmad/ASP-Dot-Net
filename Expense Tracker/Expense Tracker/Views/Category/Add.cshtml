@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-5">
    <h1 class="text-gradient text-center mb-5">Add New Category</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-hover shadow-lg p-4">
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="name" class="text-light">Category Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter category name" required>
                    </div>

                    <button type="submit" class="btn btn-gradient btn-block">Add Category</button>
                </form>
            </div>
        </div>
    </div>
</div>
