@{
    ViewData["Title"] = "Categories List";
}

<div class="container mt-5">
    <h1 class="text-gradient text-center mb-5">Categories</h1>

    <div class="row">
        <div class="col-md-12 text-right mb-4">
            <a href="/Category/Add" class="btn btn-gradient">Add New Category</a>
        </div>
    </div>

    <table class="table table-striped text-light">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through categories here (Assuming you pass a list of categories from the controller) -->
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a href="/Category/Edit/@category.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Category/Delete/@category.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
