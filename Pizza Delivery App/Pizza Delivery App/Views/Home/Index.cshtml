@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center text-white py-5" style="background: linear-gradient(90deg, #4b0082, #8b00ff);">
    <h1 class="display-4">Welcome to PizzaExpress</h1>
    <p class="lead">Delicious pizzas delivered to your doorstep!</p>
    <a href="/Menu" class="btn btn-light btn-lg mt-3">Order Now</a>
</div>

<div class="row my-5">
    <h2 class="text-center mb-4">Our Specials</h2>
    <div class="col-md-4">
        <div class="card shadow" style="background: linear-gradient(135deg, #4b0082, #8b00ff);">
            <div class="card-body text-white">
                <h5 class="card-title">Margherita Pizza</h5>
                <p class="card-text">A classic delight with rich tomato sauce and mozzarella cheese.</p>
                <a href="/Product/Index" class="btn btn-outline-light">Order Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow" style="background: linear-gradient(135deg, #4b0082, #8b00ff);">
            <div class="card-body text-white">
                <h5 class="card-title">Pepperoni Pizza</h5>
                <p class="card-text">Savory pepperoni slices with a tangy tomato base.</p>
                <a href="/Product/Index" class="btn btn-outline-light">Order Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow" style="background: linear-gradient(135deg, #4b0082, #8b00ff);">
            <div class="card-body text-white">
                <h5 class="card-title">Veggie Supreme</h5>
                <p class="card-text">Loaded with fresh vegetables and a blend of cheeses.</p>
                <a href="/Product/Index" class="btn btn-outline-light">Order Now</a>
            </div>
        </div>
    </div>
</div>
